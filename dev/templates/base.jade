						a(href="https://ru-ru.facebook.com", target="_blank", title="Facebook", class="footer-social-item footer-social-item--facebook")
							include ../../prod/svg/icons/facebook.svg	
						a(href="https://ok.ru", target="_blank", title="Одноклассники", class="footer-social-item footer-social-item--ok")
							include ../../prod/svg/icons/ok.svg	
								
		a(href="#top", title="Вверх", class="go-top")
			include ../../prod/svg/icons/arrow_black_up.svg	

