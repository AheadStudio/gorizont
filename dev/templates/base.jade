						div(class="header-contacts")
							div(class="header-contacts-phone")
								a(href="tel:+78002001955", class="header-phone-link link link--black") 8 (800) 200 19 55
									div(class="header-phone-note") Звонок бесплатный, круглосуточно
							div(class="header-contacts-location")
								a(href="/pages/contacts.html#map", class="header-location-link link link--black") 
									div(class="header-location-point")
										include ../../prod/svg/icons/point_map.svg
									span(class="header-location-link-text") Как добраться

					
				div(class="header-row header-row--bottom")
					div(class="page-inner")
						div(class="header-logo")
							a(href="/home.html", class="header-logo-link")
								img(src="../dummy/logo.png", class="header-logo-img")
				
				
				
				
			main(class="page-content")
				block content

