				div(class="header-row header-row--top")
					div(class="page-inner page-inner--relative page-inner--clearfix")
						+menu({
							rootClass: "header-menu",
							items: [
								{
									name: "О горизонте",
									linkClass: "link link--black",
									href: "#",
									items: [
										{
											name: "О компании",
											href: "/about.html",
