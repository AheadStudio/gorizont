			position absolute
			top 20px
			left 20px

			padding 5px

			color #fff
			font-family GothamProMedium
			font-size 16px

			opacity 0
			transform translateY(-10px)

			transition all 0.5s $cubic-transition

			z-index: 200

			&--green
				background #faaf78

			&--blue
				background $color-blue

		&:not(.gallery-container-item--video):hover
			&:after
				opacity 1
				transform translateY(0%)

		&--video
			&:after
				width: 0
				height 0

				top 0
				left 0
				bottom 0
				right 0
				margin auto

				border-top 65px solid transparent
				border-left 105px solid #e83b7d
				border-bottom 65px solid transparent

				opacity 1

				background transparent

			.gallery-container-item-title
				opacity 1
				transform translateX(0px)

	.load-more
		margin-top 20px

		.load-more-btn
			width 150px

/* magnific popup */



/* //magnific popup */

.mfp-gallery
	&.mfp-wrap
		background rgba(242, 89, 145, 0.6)

	&.mfp-with-anim
		opacity 0
		transition all 1s $cubic-transition
		transform scale(0.8)

	&.mfp-bg
		opacity 0
		transition all 1s $cubic-transition

	&.mfp-ready
		.mfp-with-anim
			opacity 1
			transform scale(1)
		&.mfp-bg
			opacity 0.8

	&.mfp-removing

		.mfp-with-anim
			transform scale(0.8)
			opacity 0

		&.mfp-bg
			opacity 0

	&.mfp-bg, .mfp-preloader
		opacity 0
		transition all 0.3s ease-out

	.mfp-container
		.mfp-content
			.mfp-close
				position absolute
				top -25px
				right -80px

				display inline-block
				padding 0


				width 40px
				height 40px


				border-radius 20px

				opacity 1

				background #fff

				line-height 0

				font-size 26px
				text-align center
				color #000

				transition all 0.5s $cubic-transition

				cursor pointer

				&:hover
					transform: rotate(360deg);
					opacity 0.8

		.mfp-gallery-arrow

			position: absolute
			top 48%

			display inline-block

			width: 40px
			height 40px

			border-radius 30px

			background: #fff

			transition all 0.5s $cubic-transition


			&--left,&--right

				&:before
					content ""

					position absolute
					width 22px
					height 20px

					background-repeat no-repeat
					background-image: url("../svg/icons/arrow_black_up.svg")

					transition opacity 0.5s $cubic-transition

					z-index: 10000


			&--right
				right -80px

				&:before
					top 13px
					right 8px
					transform rotate(90deg)

			&--left
