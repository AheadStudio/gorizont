			position absolute

			top 50%
			left 50%

			width 90px
			height 50px

			margin-left -45px
			margin-top -25px

			background url("../svg/icons/eye.svg")
			background-repeat no-repeat
			background-size contain
			opacity 0

			transform translateY(10%)

			transition all 0.5s $cubic-transition

		.gallery-container-item-img
			position absolute
			left 0
			top 0

			display block
			width 100%
			height 100%

