/*** search result***/


/*** gallery***/

.gallery
	display block
	width 100%

	width 105%
	margin-left -2.5%

	margin-top 60px

	.gallery-container-items
		font-size 0
	.gallery-container-more
		transform translateY(0px)

		transition opacity 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)

