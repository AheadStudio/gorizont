						color #fff

				.search-result-item-location
					display block
					width 20

					.search-result-item-location-floor
						display block
						margin-bottom 35px

					.search-result-item-location-floor-show
						padding 15px 15px
						text-transform lowercase

						font-size 16px


/*** search result***/


/*** gallery***/

.gallery
	display block

	width 105%
	margin-left -2.5%

	margin-top 60px

	.gallery-container-items
		font-size 0
	.gallery-container-more
		transform translateY(0px)

		transition opacity 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)

		&.load-events-item
			opacity 0
			transform translateY(-50px)

	.gallery-container-item
		position relative

		display inline-block
		vertical-align top

		margin-bottom 40px

		&:before
			content ""

			display block
			padding-top 75%

		&--w1
			width 45%
			margin-left 2.5%
			margin-right 2.5%
		&--w2
			width 28.33333333%
			margin-right 2.5%
			margin-left 2.5%

		&:after
			content ""
			position absolute

			top 50%
			left 50%

			width 90px
			height 50px

			margin-left -45px
			margin-top -25px

			background url("../svg/icons/eye.svg")
			background-repeat no-repeat
			background-size contain
			opacity 0

			transform translateY(10%)

			transition all 0.5s $cubic-transition

		.gallery-container-item-img
			position absolute
			left 0
			top 0

			display block
			width 100%
			height 100%

			object-fit cover

		.gallery-container-item-title
			position absolute
			top 20px
			left 20px

			padding 5px

			color #fff
			font-family GothamProMedium
			font-size 16px

			opacity 0
			transform translateY(-10px)

			transition all 0.5s $cubic-transition

			z-index: 200

			&--green
				background #faaf78

			&--blue
				background $color-blue

		&:not(.gallery-container-item--video):hover
			&:after
				opacity 1
				transform translateY(0%)

		&--video
			&:after
				width: 0
				height 0

				top 0
				left 0
				bottom 0
				right 0
				margin auto

				border-top 65px solid transparent
				border-left 105px solid #e83b7d
				border-bottom 65px solid transparent

				opacity 1

				background transparent

			.gallery-container-item-title
				opacity 1
				transform translateX(0px)

	.load-more
		margin-top 20px

		.load-more-btn
			width 150px

/* magnific popup */



/* //magnific popup */

.mfp-gallery
	&.mfp-wrap
		background rgba(242, 89, 145, 0.6)

	&.mfp-with-anim
		opacity 0
		transition all 1s $cubic-transition
		transform scale(0.8)

	&.mfp-bg
		opacity 0
		transition all 1s $cubic-transition

	&.mfp-ready
		.mfp-with-anim
			opacity 1
			transform scale(1)
		&.mfp-bg
			opacity 0.8

	&.mfp-removing

		.mfp-with-anim
			transform scale(0.8)
			opacity 0

		&.mfp-bg
			opacity 0

	&.mfp-bg, .mfp-preloader
