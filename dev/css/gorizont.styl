						display block
						font-size 16px

				.search-result-item-products
					display block
					width 30%

					.search-result-item-products-time
						display block
						margin-bottom 15px
						margin-top 15px

					.search-result-item-products-text--bold
						font-family GothamProBold


					.search-result-item-products-more
						padding 5px 10px
						text-transform lowercase

