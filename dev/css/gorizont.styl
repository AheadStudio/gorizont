/*** Settings ***/
@import "nib"
@import "../lib/css/css"

global-reset();
reset-html5();
form-reset();
b
strong
i
em
	font-style normal
	font-weight normal


/*-- variables --*/

$cubic-transition = cubic-bezier(0.25, 0.46, 0.45, 0.94)

$color-gray = #969aa3
$color-blue = #a23f97
$color-yellow = #ffd102

$color-black-hover =  rgba(#000000, 0.6)
/*-- //variables --*/


/*** //Settings ***/


/*** Fonts ***/
@font-face
	font-family "GothamProBlack"
	src url("../fonts/GothamProBlack.woff") format("woff")

@font-face
	font-family "GothamProBold"
	src url("../fonts/GothamProBold.woff") format("woff")

@font-face
	font-family "GothamProLight"
	src url("../fonts/GothamProLight.woff") format("woff")

@font-face
	font-family "GothamProMedium"
	src url("../fonts/GothamProMedium.woff") format("woff")

@font-face
	font-family "GothamProRegular"
	src url("../fonts/GothamProRegular.woff") format("woff")
/*** //Fonts ***/

html
	height 100%
body
	min-height 100%
	height 100%
	line-height 1

	color #333333
	cursor default

	font-family "GothamProLight", sans-serif

body
	min-height 100%

.page
	width 100%
	min-height 100%

/*** HEADER STYLES ***/
.page-header
	width 100%
	height 215px

	padding 20px 0 0 0
	box-sizing border-box

	.header-row--top
		margin-bottom 5px

	.header-row
		.header-col
			float left
			box-sizing border-box
			&--1
				width 28%
			&--2
				width 72%

		.header-contacts
			display flex
			float left

			width 28%
			padding 17px 0

			.header-contacts-phone,
			.header-contacts-location
				width 50%

			.header-contacts-phone
				.header-phone-link
					font-family GothamProMedium

					.header-phone-note
						margin-top 4px

						font-size 12px
						font-weight normal
						font-family GothamProRegular

						text-transform lowercase
						color $color-gray

			.header-contacts-location
				text-align right

				.header-location-point
					position absolute

					top -4px
					height 23px
					width 20px
					left -25px

				.header-location-link
					position relative

					.header-location-link-text
						font-family GothamProMedium

		.header-logo
			text-align center

			.header-logo-img
				margin 0 auto


/** main menu**/
.header-menu
	position relative
	float left

	width 72%
	display block

	.header-menu-inner
		.header-menu-item-holder
			display inline-block

			padding 15px 0px

			border 1px solid transparent
			box-sizing border-box

			font-family GothamProMedium

			.header-menu-item
				padding 5px 5px 5px 3px

				.header-menu-item-name
					font-size 16px

			&--has-submenu
				padding 15px 10px
				width 126px
				margin-right 10px

				.header-menu-item
					padding 5px 0px

				.header-menu-level1
					border 1px solid transparent



		.hovered
			box-sizing border-box

			border 1px solid $color-gray
			border-bottom-color transparent

			.header-menu-level1
				box-sizing border-box

				border-color $color-gray
				border-top-color transparent


				.header-menu-level1-inner
					opacity 1
					filter none
					transform translateY(0)

.header-menu-level1
	position absolute
	left 0
	display none
	box-sizing border-box
	width 126px

	transition background-color 0.5s $cubic-transition

	.header-menu-level1-inner
		position relative

		padding 10px
		overflow hidden
		opacity 0

		transform translateY(20px)
		transition transform 0.5s $cubic-transition, opacity 0.5s $cubic-transition


	&-item-holder
		padding 10px 0

		font-family GothamProRegular

		a
			text-decoration none
			color #000

			transition all 0.5s $cubic-transition
			&:hover
				opacity 0.5

.icon-shop
	position relative
	margin-left 30px
	&:before
		content ""
		position absolute
		top 3px
		left -29px

		background-image: url("../svg/icons/shop_white.svg")
		background-size contain
		background-repeat no-repeat

		width 18px
		height 30px

		z-index 100

	&:after
		content ""
		position absolute
		top -2px
		left -38px

		display block

		width 35px
		height 35px

		border-radius 35px

		background $color-blue



/** //main menu **/

/*** //HEADER STYLES ***/

/*** FOOTER STYLES ***/
.page-footer
	width 100%
	height 80px

	margin-top 120px

	background #fff

	.page-inner
		height 100%

	.footer-row
		display flex

		height 100%

		align-items center
		justify-content space-between

		.footer-creators
			float left
			width 32%
			margin-right 2%

			.footer-creators-title
				font-size 14px

			.footer-creators-name
				border-bottom 1px solid #cbcbcb
				transition border-bottom-color 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94)

				font-size 14px
				font-family: GothamProRegular

				text-transform uppercase
			&:hover
				.footer-creators-name
					border-bottom-color transparent

		.footer-copyrights
			width 34%
			font-size 14px


		.footer-social
			width 30%
			margin-left 6%
			text-align right

			.footer-social-title
				font-size 14px
				display inline-block
				float left

				margin-top 8px

			.footer-social-item
				position relative
				display inline-block

				margin 0px 5px

				width 32px
				height 32px

				box-sizing border-box

				border-radius 50%
				border 2px solid black

				transition opacity 0.5s $cubic-transition
				opacity 1

				svg
					position absolute
					width 60%
					display block
					left 50%
					top 50%
					transform: translate(-50%,-50%)
					path
						fill #000000
				&--facebook
					svg
						width 26%
				&--ok
					svg
						width 34%
				&:hover
					opacity: 0.5

/*** //FOOTER STYLES ***/

/*** COMMON STYLES***/
.link
	text-decoration none

.link--bold
	font-weight bold

.link--darkgray
	color #333333


.link--black
	color #000

.link-black-bottom
	border-bottom 2px solid transparent
	transition border-bottom-color 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94)
	&:hover
		border-bottom-color #000

.link-black-inverse
	border-bottom 2px solid #000
	transition border-bottom-color 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94)
	&:hover
		border-bottom-color transparent


.link--gray
	color $color-gray

.link-gray-inverse
	border-bottom 1px solid $color-gray
	transition border-bottom-color 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94)
	&:hover
		border-bottom-color transparent



.link--red
	color #ee4784

.link-red-bottom
	border-bottom 2px solid transparent
	transition border-bottom-color 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94)
	&:hover
		border-bottom-color #ee4784

.link-red-inverse
	border-bottom 2px solid #ee4784
	transition border-bottom-color 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94)
	&:hover
		border-bottom-color transparent



.link--blue
	color $color-blue

.link-blue-bottom
	border-bottom 2px solid transparent
	transition border-bottom-color 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94)
	&:hover
		border-bottom-color $color-blue

.link-blue-inverse
	border-bottom 2px solid $color-blue
	transition border-bottom-color 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94)
	&:hover
		border-bottom-color transparent



.page-inner
	width 100%

	max-width 1150px

	margin 0 auto
	box-sizing border-box
	padding 0 20px

	&--w1
		max-width 1150px
		padding-left 30px

	&--relative
		position relative

	&--clearfix
		clearfix()
.page-text
	p
		font-size 16px
		margin-bottom 45px
		line-height 2

.load-more
	width 100%

	.load-more-btn
		display block

		width 335px
		margin 0 auto

		padding 20px 0

		background #e83b7d

		text-align center

		color #fff
		transition opacity 0.5s $cubic-transition

		font-size 18px

		&:hover
			opacity 0.8

/** search **/
.search
	position absolute

	.search-item
		width 100%
		padding 5px 0 14px 0
		border-bottom 1px solid #cccccc

		&::-webkit-input-placeholder
			font-size 14px
			font-family GothamProRegular
			font-weight: 500
			color #333333

			opacity 1

			transition opacity 0.5s $cubic-transition, transform 0.5s $cubic-transition

		&:focus

			&::-webkit-input-placeholder
				opacity 0
				transform translateY(10px)

	.search-submit
		position absolute
		top 0
		right 0

		width 25px
		height 25px

		background-image url("../svg/icons/loupe.svg")
		background-repeat no-repeat
		background-size contain

		transition all 0.5s $cubic-transition, transform 0.5s $cubic-transition

		&:hover
			background-image url("../svg/icons/red_loupe.svg")


/** //search **/


/** button up **/

.go-top
	position fixed

	left 50%
	bottom 130px

	display block

	width 20px
	margin-left 510px

	opacity 0
	cursor default

	transition opacity 0.5s $cubic-transition

.go-top.active
	opacity 1
	cursor pointer
	transition opacity 0.5s $cubic-transition

	&:hover
		opacity 0.6


/** //button up **/


/** social block **/

.social-item
	position relative
	display inline-block

	margin 0px 5px

	width 32px
	height 32px

	box-sizing border-box

	border-radius 50%
	border 2px solid black

	transition opacity 0.5s $cubic-transition
	opacity 1

	svg
		position absolute
		width 60%
		display block
		left 50%
		top 50%
		transform: translate(-50%,-50%)

		path
			fill #000000

	&--facebook
		svg
			width 26%
	&--ok
		svg
			width 34%

	&:hover
		opacity: 0.5

/** //social block **/


/** navigation **/

.navigation
	position absolute
	right 35px
	top 10px

	display block

	height 220px

	.navigation-items
		display block
		height 100%


		.navigation-item
			display block
			text-align center

			transition opacity 0.5s $cubic-transition
			&--close
				padding 13px
				margin-bottom 50px
				background #f4f4f4

				border-radius 50%

				svg
					width 13px
					vertical-align middle

			&--prev
				svg
					transform rotate(-90deg)
					width 20px
			&--next
				margin-bottom 45px
				svg
					transform rotate(90deg)
					width 20px
			&:hover
				opacity 0.6
/** //navigation **/

/** button **/
.btn
	display inline-block
	box-sizing border-box

	text-align center
	cursor pointer

	transition opacity 0.5s $cubic-transition

	color #000

	font-family GothamProLight
	&:hover
		opacity 0.6

.btn--yellow
	background-color $color-yellow

.btn--blue
	background-color $color-blue



/** //button **/



/*** //COMMON STYLES***/




/*** MAIN STYLES***/

.page-title
	letter-spacing 7px
	font-size 18px

	text-transform uppercase

	font-family GothamProMedium

	&--big
		font-size 70px

		letter-spacing inherit

		text-transform inherit


/*** shares ***/
.shares
	width 100%

	margin-top 55px

	.shares-container-items
		display block

		transform translateY(0px)

		transition opacity 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)

		&.load-events-item
			opacity 0
			transform translateY(50px)

	.load-more
		display block
		margin-top 60px

	.shares-item
		display inline-block
		vertical-align top

		width 28%

		margin-bottom 50px
		margin-right 6%

		&:nth-child(3n)
			margin-right 0%

		.shares-item-heading
			margin-bottom 20px

			.shares-item-photo-holder
				.shares-item-photo
					display block
					max-width 100%


		.shares-item-content
			width 100%
			.shares-item-content-title
				position relative

				width 75%

				margin-bottom 5px

				span
					font-size 24px
				    line-height 30px

				&:after
					content ""

					position absolute
					left 65%
					top 0

					width 50%
					height 110%

					background #fecc00

					opacity 0

					transition opacity 0.5s $cubic-transition, transform 0.5s $cubic-transition

					z-index -10

				&:before
					content ""
					position absolute

					top 15%
					left 90%
					width 20px
					height 22px

					display block
					opacity 0

					background url("../svg/icons/arrow_black_up.svg")
					background-size contain
					background-repeat no-repeat

					transform rotate(90deg) translateY(120%)
					transition opacity 0.5s $cubic-transition, transform 0.3s $cubic-transition

			.shares-item-content-text
				width 100%
				margin-bottom 10px

				line-height 20px

			.shares-item-content-shop
				width 100%
				margin-bottom 10px

				font-family GothamProMedium
				font-weight bold

			.shares-item-content-tag
				display inline-block
				padding 6px 10px

				background #a24098
				color #fff

				text-transform lowercase

				font-weight 100

		&--title-bold
			.shares-item-content
				.shares-item-content-title
					span
						font-size 34px
						font-weight 600

						font-family GothamProBold

						line-height 36px
		&:hover
			.shares-item-content-title:after
				opacity 1
				transform translateX(10%)

			.shares-item-content-title:before
				opacity 1
				transform rotate(90deg) translateY(-50%)

/*** //shares ***/


/*** article ***/

.article
	display block
	width 82%
	margin-top 25px

	.page-title--big
		line-height 60px

	.article-info
		margin-top 15px

		font-size 16px

	.article-shop
		margin-top 15px

		font-weight bold
		font-size 16px
		font-family GothamProMedium

	.article-social
		margin-top 45px
		.article-social-text
			font-size 18px
			float left
			margin-top 6px
			margin-right 20px

	.article-img
		margin-top 60px
		margin-bottom 80px


.similar-shares
	display block
	width 100%

	margin-top 150px

	.similar-shares-title
		margin-bottom 80px
		font-size 20px
		font-family GothamProRegular

	.similar-shares-items
		display block
		clearfix()

		.similar-shares-item
			display inline-block
			vertical-align top

			width 28%

			margin-right 6%

			&:nth-child(3n)
