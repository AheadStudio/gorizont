	position relative

	display block

	.journal-information
		width: 400px

		margin 0 auto
		margin-top 60px
		margin-bottom 70px

		line-height 2

		font-size 16px
		text-align center

	.journal-container-items
		transform translateY(0px)

		transition opacity 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)

