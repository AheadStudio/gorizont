@font-face
	font-family "GothaProMed"
	src url("../fonts/GothaProMed.otf") format("otf")
/*** //Fonts ***/

html

body
	min-height 100%

	line-height 1

	color #000
	cursor default

	font-family "GothaProMed", sans-serif



/*** HEADER STYLES ***/
.page-header
	width 100%
	height 250px

	padding 20px 0 30px 0
	box-sizing border-box

	.header-row--top
		margin-bottom 15px

	.header-row
		.header-col
			float left
			box-sizing border-box
			&--1
				width 28%
			&--2
				width 72%

		.header-contacts
			display flex
			padding 15px 0

			.header-contacts-phone,
			.header-contacts-location
				width 50%

			.header-contacts-phone
				.header-phone-link
					font-weight bold

					.header-phone-note
						margin-top 4px

						font-size 12px
						font-weight normal

						text-transform lowercase
						color color-gray

			.header-contacts-location
				text-align right
				.header-location-link
					.header-location-link-text
						font-weight bold

		.header-logo
			display flex

			.header-logo-img
				margin 0 auto


/** main menu**/
.header-menu
	position relative
	width 100%
	display block

	.header-menu-inner
		.header-menu-item-holder
			display inline-block

			padding 15px 10px

			border 1px solid transparent
			box-sizing border-box

			.header-menu-item
				padding 5px 0

				.header-menu-item-name
					font-weight bold
					font-size 16px


		.hovered
			box-sizing border-box

			border 1px solid color-gray
			border-bottom-color transparent

			.header-menu-level1
				box-sizing border-box

				border 1px solid color-gray
				border-top-color transparent


				.header-menu-level1-inner
					opacity 1
					filter none
					transform translateY(0)

.header-menu-level1
	position absolute
	left 0
	display none
	box-sizing border-box
	width 118px

	transition background-color 0.5s cubic-transition

	.header-menu-level1-inner
		position relative

		padding 10px
		overflow hidden
		opacity 0

		transform translateY(20px)
		transition transform 0.5s cubic-transition, opacity 0.5s cubic-transition


	&-item-holder
		padding 10px 0

		a
			text-decoration none
			color #000

			transition all 0.5s cubic-transition
			&:hover
				opacity 0.5

/** //main menu **/

