			.similar-shares-item-heading
				margin-bottom 15px

			.similar-shares-item-content
				.similar-shares-item-content-title
					position relative

					width 75%

					margin-bottom 20px

					span
						font-size 24px

					&:after
						content ""

						position absolute
						left 65%
						top 0

						width 50%
						height 110%

						background #fecc00

						opacity 0

						transition opacity 0.5s $cubic-transition, transform 0.5s $cubic-transition

						z-index -10

					&:before
						content url("../svg/icons/arrow_black_up.svg")
						position absolute

						top 15%
						left 90%
						width 20px

						display block
						opacity 0

						transform rotate(90deg) translateY(50%)
						transition opacity 0.5s $cubic-transition, transform 1s $cubic-transition

				&-title
					font-size 34px
					margin-bottom 25px
				&-text
					margin-bottom 15px
				&-shop
					font-family GothamProMedium

			&:hover
				.similar-shares-item-content-title:after
					opacity 1
					transform translateX(10%)

				.similar-shares-item-content-title:before
					opacity 1
					transform rotate(90deg) translateY(-100%)



/*** //article ***/

