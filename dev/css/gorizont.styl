			transform translateY(50px)

	.journal-row
		display block
		margin-bottom 55px


		.journal-row-year
			display block

			font-size 32px

			text-align center

			margin-bottom 45px

		.journal-items
			display flex
			flex-wrap wrap
			justify-content space-between

			.journal-item
				display block

				margin-bottom 40px

				img
					display block

	.load-more
		display block
		margin-top -10px
		.load-more-btn
			width 185px

	.search
		right 0
		top -50px

		width 320px


/*** //journal ***/


/*** search result***/

.search-result
	position relative
	width 100%
	margin-top 65px

	.search
		top -90px
		left 50%
		margin-left -270px
		width 620px

	.search-result-items
