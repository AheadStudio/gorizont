/*** Settings ***/
@import "nib"
@import "../lib/css/css"

global-reset();
reset-html5();
form-reset();
b
strong
i
em
	font-style normal
	font-weight normal


/*-- variables --*/

cubic-transition = cubic-bezier(0.25, 0.46, 0.45, 0.94)

color-gray = #969aa3
color-blue = #a23f97
color-yellow = #ffd102

color-black-hover =  rgba(#000000, 0.6)
/*-- //variables --*/


/*** //Settings ***/


/*** Fonts ***/
@font-face
	font-family "GothamProBlack"
	src url("../fonts/GothamProBlack.woff") format("woff")

@font-face
	font-family "GothamProBold"
	src url("../fonts/GothamProBold.woff") format("woff")

@font-face
	font-family "GothamProLight"
	src url("../fonts/GothamProLight.woff") format("woff")

@font-face
	font-family "GothamProMedium"
	src url("../fonts/GothamProMedium.woff") format("woff")

@font-face
	font-family "GothamProRegular"
	src url("../fonts/GothamProRegular.woff") format("woff")
/*** //Fonts ***/

html

body
	min-height 100%

	line-height 1

	color #333333
	cursor default

	font-family "GothamProLight", sans-serif



/*** HEADER STYLES ***/
.page-header
	width 100%
	height 240px

	padding 20px 0 0 0
	box-sizing border-box

	.header-row--top
		margin-bottom 15px

	.header-row
		.header-col
			float left
			box-sizing border-box
			&--1
				width 28%
			&--2
				width 72%

		.header-contacts
			display flex
			padding 17px 0

			.header-contacts-phone,
			.header-contacts-location
				width 50%

			.header-contacts-phone
				.header-phone-link
					font-family GothamProMedium

					.header-phone-note
						margin-top 4px

						font-size 12px
						font-weight normal

						text-transform lowercase
						color color-gray

			.header-contacts-location
				text-align right

				.header-location-point
					position absolute

					top -4px
					height 23px
					width 20px
					left -25px

				.header-location-link
					position relative

					.header-location-link-text
						font-family GothamProMedium

		.header-logo
			display flex
			justify-content center

			.header-logo-img
				margin 0 auto


/** main menu**/
.header-menu
	position relative
	width 100%
	display block

	.header-menu-inner
		.header-menu-item-holder
			display inline-block

			padding 15px 10px

			border 1px solid transparent
			box-sizing border-box

			font-family GothamProMedium

			.header-menu-item
				padding 5px 0

				.header-menu-item-name
					font-size 16px


		.hovered
			box-sizing border-box

			border 1px solid color-gray
			border-bottom-color transparent

			.header-menu-level1
				box-sizing border-box

				border 1px solid color-gray
				border-top-color transparent


				.header-menu-level1-inner
					opacity 1
					filter none
					transform translateY(0)

.header-menu-level1
	position absolute
	left 0
	display none
	box-sizing border-box
	width 125px

	transition background-color 0.5s cubic-transition

	.header-menu-level1-inner
		position relative

		padding 10px
		overflow hidden
		opacity 0

		transform translateY(20px)
		transition transform 0.5s cubic-transition, opacity 0.5s cubic-transition


	&-item-holder
		padding 10px 0

		font-family GothamProRegular

		a
			text-decoration none
			color #000

			transition all 0.5s cubic-transition
			&:hover
				opacity 0.5

.icon-shop
	position relative
	margin-left 30px
	&:before
		content ""
		position absolute
		top 3px
		left -27px

		background-image: url("../svg/icons/shop_white.svg")
		background-size contain
		background-repeat no-repeat

		width 18px
		height 30px

		z-index 100

	&:after
		content ""
		position absolute
		top -2px
		left -36px

		display block

		width 35px
		height 35px

		border-radius 35px

		background color-blue



/** //main menu **/

/*** //HEADER STYLES ***/

/*** FOOTER STYLES ***/
.page-footer
	width 100%
	height 80px

	background #fff

	.page-inner
		height 100%

	.footer-row
		display flex
		align-items center

		height 100%
		padding 0 10px

		font-family GothamProRegular

		.footer-infomation
			width 70%
			margin-right 4%

			.footer-development
				font-size 14px

			a
				font-weight 600
				font-size 14px

				text-transform uppercase
				margin-right 35px

			.footer-organization
				font-size 14px

		.footer-social
			width 40%
			text-align right

			.footer-social-text
				font-size 14px
/*** //FOOTER STYLES ***/

/*** COMMON STYLES***/
.link
	text-decoration none

.link-black
	color #000

.link-black-bottom
	border-bottom 2px solid transparent
	transition border-bottom-color 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94)
	&:hover
		border-bottom-color #000

.link-black-inverse
	border-bottom 2px solid #000
	transition border-bottom-color 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94)
	&:hover
		border-bottom-color transparent

.link-gray
	color color-gray

.link-dark-gray
	color #333333

.link-bold
	font-weight bold

.link-red
	color #ee4784

.link-red-bottom
	border-bottom 2px solid transparent
	transition border-bottom-color 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94)
	&:hover
		border-bottom-color #ee4784

.link-red-inverse
	border-bottom 2px solid #ee4784
	transition border-bottom-color 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94)
	&:hover
		border-bottom-color transparent

.link-blue
	color color-blue

.link-blue-bottom
	border-bottom 2px solid transparent
	transition border-bottom-color 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94)
	&:hover
		border-bottom-color color-blue

.link-blue-inverse
	border-bottom 2px solid color-blue
	transition border-bottom-color 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94)
	&:hover
		border-bottom-color transparent

.page-inner
	clearfix()
	width 100%

	max-width 1200px

	margin 0 auto
	box-sizing border-box

	&--indents
		padding-left 10px
		margin-bottom 55px

.page-text
	p
		font-size 16px
		margin-bottom 60px
		line-height 2

.load-more
	width 100%

	.load-more-btn
		display block

		width 300px
		margin 0 auto

		padding 20px 0

		background #e83b7d

		text-align center

		color #fff
		transition opacity 0.5s cubic-transition

		&:hover
			opacity 0.8

.search
	position absolute

	.search-item
		width 100%
		padding 5px 0 16px 0
		border-bottom 2px solid #cccccc

		&::-webkit-input-placeholder
			font-size 14px
			font-family GothamProRegular
			font-weight: 500
			color #333333

			opacity 1

			transition opacity .2s cubic-transition, transform .1s cubic-transition

		&:focus
			border-bottom 1px solid #cccccc

			&::-webkit-input-placeholder
				opacity 0
				transform translateY(10px)

	.search-submit
		position absolute
		top 0
		right 0

		width 25px
		height 25px

		background-image url("../svg/icons/loupe.svg")
		background-repeat no-repeat
		background-size contain

		transition opacity 0.5s cubic-transition

		&:hover
			opacity 0.8

/*** //COMMON STYLES***/



/*** MAIN STYLES***/

.page-heading
	letter-spacing 10px
	font-size 18px

	text-transform uppercase

	font-family GothamProMedium

	&--big
		font-size 70px

		letter-spacing inherit

		text-transform inherit


/*** shares ***/
.shares
	width 100%

	margin-top 60px

	.shares-list-row
		clearfix()
		margin-bottom 70px

		.shares-item
			display inline-block
			float left

			width 28%

			margin-right 8%

			&:last-child
				margin-right 0%

			.shares-item-heading
				margin-bottom 25px

			.shares-item-content
				width 100%
				.shares-item-content-title
					position relative

					width 100%

					margin-bottom 25px


					&--bold
						span
							font-size 34px
							font-weight 600

							font-family GothamProBold

					&--light
						span
							font-size 24px

					&:after
						content ""

						position absolute
						left 50%
						top 0

						width 50%
						height 110%

						background #fecc00

						opacity 0

						transition opacity 0.5s cubic-transition, transform 0.5s cubic-transition

						z-index -10

					&:before
						content ""
						position absolute

						opacity 0
						right 0
						top 0

						transition opacity 0.5s cubic-transition, transform 0.5s cubic-transition


				.shares-item-content-text
					width 100%
					margin-bottom 20px

				.shares-item-content-shop
					width 100%
					margin-bottom 20px

					font-family GothamProMedium
					font-weight bold

				.shares-item-content-tag
					display inline-block
					padding 8px

					background #a24098
					color #fff

					text-transform lowercase

					font-weight 100

			&:hover
				.shares-item-content-title:after,.shares-item-content-title:before
					opacity 1
					transform translateX(10%)
/*** //shares ***/


/*** shares-detail ***/

.shares-detail
	display block
	width 82%

	.shares-detail-info
		margin-top 15px

		font-size 16px

	.shares-detail-shop
		margin-top 15px

		font-weight bold
		font-size 16px
		font-family GothamProMedium
	.shares-detail-social
		margin-top 35px
		.shares-detail-social-text
			font-size 16px

	.shares-detail-img
		margin-top 60px
		margin-bottom 100px


.simular-shares
	display block
	width 100%

	margin-top 150px

	h2
		margin-bottom 80px
		font-size 20px
		font-family GothamProRegular

	.simular-shares-items
		display block
		clearfix()

		.simular-shares-item
			float left
			width 30%

			margin-right 5%

			&:last-child
				margin-right 0

			.simular-shares-item-heading
				margin-bottom 20px

			.simular-shares-item-content
				&-title
					font-size 34px
					margin-bottom 25px
				&-text
					margin-bottom 15px
				&-shop
					font-family GothamProMedium


/*** //shares-detail ***/

/*** journal ***/

.journal
	position relative

	display block

	.journal-information
		width: 400px

		margin 0 auto
		margin-top 50px
		margin-bottom 70px

		line-height 2

		font-size 16px
		text-align center

	.journal-row
		display block
		margin-bottom: 100px

		.journal-row-year
			display block

			font-size 32px

			text-align center

			margin-bottom 50px

		.journal-items
			display flex
			justify-content space-between

	.load-more
		.load-more-btn
			width 150px

	.search
		right 0
		top -50px

		width 320px


/*** //journal ***/


/*** search result***/

.search-result
	position relative
	width 100%

	.search
		top -77px
		left 50%
		margin-left -325px
		width 650px

	.search-result-items
		width 100%
		display block

		.search-result-item
			padding 30px 0
			border-top 1px solid #e6e6e6


			&:last-child
				border-bottom 1px solid #e6e6e6

			.search-result-item-inner
				padding 0px 25px 0 42px

				display flex
				align-items center

				.search-result-item-logo
					display block
					width 15%
					margin-right 5%
					text-align center

				.search-result-item-shop
					display block
					width 30%

					.search-result-item-shop-name
						display block
						margin-bottom 16px
						font-size 16px

					.search-result-item-shop-phone
						display block
						font-size 16px

				.search-result-item-products
					display block
					width 30%

					.search-result-item-products-time
						display block
						margin-bottom 15px
						margin-top 15px

					.search-result-item-products-text--bold
						font-family GothamProBold


					.search-result-item-products-more

						padding 5px 10px

						background-color color-blue
						text-transform lowercase

						color #fff

						transition opacity 0.5s cubic-transition

						&:hover
							opacity 0.8

				.search-result-item-location
					display block
					width 20

					.search-result-item-location-floor
						display block
						margin-bottom 25px

					.search-result-item-location-floor-show
						padding 15px 15px

						background-color color-yellow
						text-transform lowercase

						color #000

						transition opacity 0.5s cubic-transition

						&:hover
							opacity 0.8


/*** search result***/


/*** gallery***/

.gallery
	display block
	width 100%
	margin-top 60px

	.gallery-rows
		clearfix()
		margin-bottom 45px

	.gallery-item
		position relative
		display inline-block

		float left
		&--w1
			width 48%
			margin-right 4%

			&:last-child
				margin-right 0
		&--w2
			width 31%
			margin-right 3%

			&:last-child
				margin-right 0
		a
			display block

		.gallery-item-content
			width 100%

		.gallery-item-title
			position absolute
			top 20px
			left 20px

			padding 5px

			color #fff
			font-family GothamProMedium

			&--green
				background #faaf78

			&--blue
				background color-blue


		.gallery-item-container
			position relative

			&--img,&--video
				&:after
					content ""
					position absolute

					top 0
					left 0
					right 0
					bottom 0

					background rgba(0, 0, 0, 0.6)

					opacity 0

					transform scale(0.5)

					transition all 0.5s cubic-transition

				&:hover
					&:after
						opacity 1

						transform scale(1.0)



	.load-more
		.load-more-btn
			width 150px

/*** //gallery***/


