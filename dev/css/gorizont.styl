/*** FOOTER STYLES ***/
.page-footer
	width 100%
	height 80px

	background #fff

	.page-inner
		height 100%

	.footer-row
		display flex
		align-items center

		height 100%
		padding 0 10px

		.footer-infomation
			width 60%
			margin-right 4%

			.footer-development
				font-size 14px

			a
				font-weight 600
				font-size 14px

				text-transform uppercase
				margin-right 35px

			.footer-organization
				font-size 14px

		.footer-social
			width 40%
			text-align right

			.footer-social-text
				font-size 14px
